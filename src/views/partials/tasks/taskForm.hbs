<div
	class='card card-body p-4 rounded-0 bg-dark text-white'
>
	<h3>
		Add A Task
	</h3>
	<form action='/task/add' method='post'>
		<div>

			<label for='title'>Write a title:</label>
			<input
				type='text'
				name='title'
				id='title'
				placeholder='title'
				class='form-control rounded-0 bg-dark text-white'
			/>
		</div>
		<div>
			<label for='description'>description:</label>

			<textarea
				name='description'
				placeholder='description'
				id='description'
				cols='30'
				rows='6'
				class='form-control rounded-0 bg-dark text-white'
			></textarea>
		</div>
		<button class='btn btn-primary btn-sm mt-2'>Add</button>
	</form>
</div>